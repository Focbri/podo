---
import pBiodinamicas from "@assets/subCategorias/pBiodinamic.png";
import aMarcha from "@assets/subCategorias/aMarcha.png";
import pComputarizada from "@assets/subCategorias/pComput.png";

import plantillaICO from "@assets/subCategorias/plantillaPB.png";
import lupaICO from "@assets/subCategorias/lupaAM.png";
import piesICO from "@assets/subCategorias/piesPC.png";

import bgPB from "@assets/subCategorias/bgPB.svg";
import logoB from "@assets/banner/logoB.png";
---



<section class="lg:my-3  flex items-center justify-center my-2 text-[#fff] bg-[#00b1bf]">
    <div class="lg:py-4 py-2 flex justify-center items-center lg:gap-6 gap-3">
        <img src={logoB.src} alt="">
        <span class="lg:text-4xl">|</span>
        <h2 id="banner" class="lg:text-4xl uppercase">Te acompañamos en cada paso</h2>
    </div>
</section>

<script is:inline>
  const phrases = [
    "Te acompañamos en cada paso",
    "plantillas dinámicas personalizadas",
    "análisis de la marchas"
  ];

  let currentIndex = 0;
  const banner = document.getElementById("banner");

  function updateBanner() {
    banner.textContent = phrases[currentIndex];
  }

  function nextPhrase() {
    currentIndex = (currentIndex + 1) % phrases.length;
    updateBanner();
  }

  function startBannerRotation() {
    setInterval(nextPhrase, 4000); // Cambia cada 5 segundos
  }

  // Inicia la rotación del banner al cargar la página
  document.addEventListener("DOMContentLoaded", startBannerRotation);
</script>